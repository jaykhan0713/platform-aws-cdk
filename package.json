{
  "name": "platform-aws-cdk",
  "version": "0.1.0",
  "bin": {
    "platform-aws-cdk": "bin/app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",

    "cdk:services": "cdk --app \"npx ts-node -r tsconfig-paths/register --prefer-ts-exts bin/services.ts\"",
    "cdk:network": "cdk --app \"npx ts-node -r tsconfig-paths/register --prefer-ts-exts bin/network.ts\"",
    "cdk:cicd": "cdk --app \"npx ts-node -r tsconfig-paths/register --prefer-ts-exts bin/cicd.ts\""
  },
  "devDependencies": {
    "@types/jest": "^30",
    "@types/node": "^24.10.1",
    "aws-cdk": "2.1101.0",
    "jest": "^30",
    "ts-jest": "^29",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.234.1",
    "constructs": "^10.0.0"
  }
}
